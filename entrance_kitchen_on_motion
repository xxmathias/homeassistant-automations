alias: entrance_kitchen_on_motion
description: Motion-activated lighting with adaptive brightness and improved timing
triggers:
  - entity_id: binary_sensor.bewegungssensor1_occupancy
    to: "on"
    trigger: state
  - entity_id: binary_sensor.bewegungssensor2_licht_occupancy
    to: "on"
    trigger: state
conditions:
  - condition: numeric_state
    entity_id: sensor.sun_solar_elevation
    below: 30
actions:
  - choose:
      - conditions:
          - condition: numeric_state
            entity_id: sensor.sun_solar_elevation
            below: 10
        sequence:
          - target:
              area_id: entrance
            data:
              kelvin: 2000
              brightness_pct: 10
            action: light.turn_on
          - target:
              entity_id: light.kuchenlampe
            action: light.turn_on
            data: {}
          - wait_for_trigger:
              - entity_id:
                  - binary_sensor.bewegungssensor1_occupancy
                  - binary_sensor.bewegungssensor2_licht_occupancy
                to: "off"
                for: "00:02:00"
                trigger: state
            timeout: "00:05:00"
          - target:
              area_id: entrance
            action: light.turn_off
            data: {}
          - condition: state
            entity_id: binary_sensor.praesenzsensor_presence
            state: "off"
          - target:
              entity_id: light.kuchenlampe
            action: light.turn_off
            data: {}
    default:
      - target:
          area_id: entrance
        data:
          brightness_pct: 100
        action: light.turn_on
      - target:
          entity_id: light.kuchenlampe
        action: light.turn_on
        data: {}
      - wait_for_trigger:
          - entity_id:
              - binary_sensor.bewegungssensor1_occupancy
              - binary_sensor.bewegungssensor2_licht_occupancy
            to: "off"
            for: "00:02:00"
            trigger: state
        timeout: "00:05:00"
      - target:
          area_id: entrance
        action: light.turn_off
        data: {}
      - target:
          entity_id: light.kuchenlampe
        action: light.turn_off
        data: {}
mode: restart
